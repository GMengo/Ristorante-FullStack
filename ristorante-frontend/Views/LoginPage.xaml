<Page x:Class="ristorante_frontend.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ristorante_frontend.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" 
      d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="19*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <!-- Intestazione superiore -->
        <TextBlock Text="Ristorante da Giovanni" 
                 FontSize="24"
                 FontWeight="Medium"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Top"
                 Grid.Row="1"
                 Grid.Column="1"
                 Foreground="#2E7D32"/>

        <!-- Contenitore login centrato -->
        <Border Width="400" 
                Background="White" 
                CornerRadius="8" 
                Padding="30"
                Grid.Row="2"
                Grid.Column="1"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center">

            <StackPanel>
                <TextBlock Text="Benvenuto" 
                         FontSize="26"
                         FontWeight="Bold" 
                         HorizontalAlignment="Center" 
                         Margin="0,0,0,25"
                         Foreground="#388E3C"/>

                <TextBlock Text="Email" 
                         Margin="0,0,0,5" 
                         FontSize="14" 
                         FontWeight="SemiBold"
                         Foreground="#616161"/>
                <TextBox x:Name="EmailTxt" 
                        Style="{StaticResource ModernTextBox}"/>

                <TextBlock Text="Password" 
                         Margin="0,0,0,5" 
                         FontSize="14" 
                         FontWeight="SemiBold"
                         Foreground="#616161"/>
                <PasswordBox x:Name="PasswordTxt" 
                           Style="{StaticResource ModernPasswordBox}"
                           Margin="0,0,0,30"/>

                <Button Content="Accedi" 
                        Click="OnLoginBtnClickAsync" 
                        Style="{StaticResource ModernLoginButton}"
                        Margin="0,0,0,15"/>
                <Button Content="Registrati" 
                        Click="OnRegisterBtnClick"
                        Style="{StaticResource ModernRegisterButton}"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>